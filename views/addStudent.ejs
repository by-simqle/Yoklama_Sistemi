<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Add Student
        </h1>
        <%= include ("./partials/messages"); %>
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name">Öğrenci Adı</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Ad giriniz"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="phoneNumber">Telefon Numarası</label>
            <input
              type="number"
              id="phoneNumber"
              name="phoneNumber"
              class="form-control"
              placeholder="Telefon Numarası Giriniz"
              value="<%= typeof phoneNumber != 'undefined' ? phoneNumber : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="parentPhoneNumber">Ebeveyn Telefon Numarası/label>
            <input
              type="number"
              id="parentPhoneNumber"
              name="parentPhoneNumber"
              class="form-control"
              placeholder="Veli Telefon Numarası Giriniz"
              value="<%= typeof phoneNumber != 'undefined' ? phoneNumber : '' %>"
            />
          </div>
          <div class="form-group col-md-4">
            <label for="schoolName">State</label>
            <select id="schoolName" class="form-control" value="<%= typeof phoneNumber != 'undefined' ? phoneNumber : '' %>">
              <option selected>Okul Seç</option>
              <option>Şehit Muhsin Kiremitçi Fen Lisesi</option>
            </select>
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Register
          </button>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
      </div>
    </div>
  </div>
  